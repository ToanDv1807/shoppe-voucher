@page
@model ShopeeVoucherWeb.Pages.Vouchers.SavedModel

@{
    ViewData["Title"] = "Saved Coupons";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Coupon Hub</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 25px 30px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .header-content h1 { font-size: 32px; color: #1f2937; margin-bottom: 5px; }
        .subtitle { color: #6b7280; font-size: 14px; }

        .menu { display: flex; gap: 15px; }
        .menu-link {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            color: #374151;
            background: #f3f4f6;
            transition: all 0.3s ease;
        }
        .menu-link:hover { background: #e5e7eb; transform: translateY(-2px); }
        .profile-btn { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; }

        .alert {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 16px 20px;
            border-radius: 12px;
            margin-bottom: 20px;
            font-weight: 600;
        }
        .alert-error { background: #fee2e2; color: #991b1b; border: 2px solid #ef4444; }

        .voucher-container { display: flex; flex-direction: column; gap: 20px; }
        .voucher-card {
            background: white;
            border-radius: 16px;
            padding: 20px;
            display: flex;
            gap: 20px;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        .voucher-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 5px;
            height: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .voucher-card:hover { transform: translateY(-5px); box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15); }

        .logo {
            width: 70px;
            height: 70px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            flex-shrink: 0;
        }
        .logo-text { font-size: 32px; font-weight: bold; color: white; }

        .voucher-middle { flex: 1; }
        .voucher-title { font-size: 20px; font-weight: 700; color: #1f2937; margin-bottom: 8px; }
        .voucher-description { font-size: 14px; color: #6b7280; margin-bottom: 12px; }

        .voucher-meta { display: flex; gap: 20px; flex-wrap: wrap; }
        .voucher-meta span { display: flex; align-items: center; gap: 6px; font-size: 13px; color: #4b5563; }
        .code-display strong { color: #667eea; font-family: 'Courier New', monospace; }

        .voucher-actions { display: flex; gap: 10px; flex-wrap: wrap; }
        .action-btn {
            display: flex;
            align-items: center;
            gap: 6px;
            padding: 10px 16px;
            border-radius: 10px;
            border: 2px solid #e5e7eb;
            background: white;
            color: #374151;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        .action-btn:hover { transform: translateY(-2px); }
        .copy-btn:hover { background: #667eea; color: white; border-color: #667eea; }
        .goto-btn:hover { background: #10b981; color: white; border-color: #10b981; }
        
        .remove-btn {
            background: #fee2e2;
            color: #991b1b;
            border-color: #fecaca;
        }
        .remove-btn:hover { background: #ef4444; color: white; border-color: #ef4444; }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: 16px;
        }
        .empty-state svg { color: #9ca3af; margin-bottom: 25px; }
        .empty-state h3 { font-size: 26px; color: #1f2937; margin-bottom: 12px; }
        .empty-state p { color: #6b7280; font-size: 16px; margin-bottom: 30px; }

        .btn-primary {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 14px 28px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4); }

        .toast {
            position: fixed;
            bottom: 30px;
            right: 30px;
            padding: 16px 24px;
            background: #1f2937;
            color: white;
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            opacity: 0;
            transform: translateY(100px);
            transition: all 0.3s ease;
            z-index: 1000;
            font-weight: 600;
        }
        .toast.show { opacity: 1; transform: translateY(0); }
        .toast.success { background: #10b981; }
        .toast.error { background: #ef4444; }

        @@media (max-width: 1024px) {
            .header { flex-direction: column; gap: 20px; text-align: center; }
            .voucher-card { flex-direction: column; text-align: center; }
            .voucher-actions { justify-content: center; width: 100%; }
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="header-content">
            <h1>💾 Saved Coupons</h1>
            <p class="subtitle">Your collection of saved vouchers</p>
        </div>

        <nav class="menu">
            <a asp-page="/Vouchers/Index" class="menu-link">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                </svg>
                All Coupons
            </a>
            <a asp-page="/Account/Profile" class="menu-link profile-btn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                Profile
            </a>
        </nav>
    </header>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-error">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="15" y1="9" x2="9" y2="15"></line>
                <line x1="9" y1="9" x2="15" y2="15"></line>
            </svg>
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="voucher-container" id="voucherContainer">
        @if (Model.SavedCoupons != null && Model.SavedCoupons.Any())
        {
            @foreach (var v in Model.SavedCoupons)
            {
                <div class="voucher-card" data-voucher-id="@v.VoucherId">
                    <div class="logo" style="background:@v.Color">
                        <span class="logo-text">@v.Title.Substring(0, 1)</span>
                    </div>

                    <div class="voucher-middle">
                        <h3 class="voucher-title">@v.Title</h3>
                        <p class="voucher-description">@v.Description</p>
                        <div class="voucher-meta">
                            <span class="code-display">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="3" y="7" width="18" height="13" rx="2"></rect>
                                    <path d="M8 7V5a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                </svg>
                                Code: <strong>@v.Code</strong>
                            </span>
                            <span class="expire-date">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"></polyline>
                                </svg>
                                Expires: @v.ExpiredDate.ToString("MMM dd, yyyy")
                            </span>
                        </div>
                    </div>

                    <div class="voucher-actions">
                        <button class="action-btn copy-btn" onclick="copyCode('@v.Code', this)">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                            </svg>
                            Copy
                        </button>
                        <a class="action-btn goto-btn" href="@v.Link" target="_blank">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                                <polyline points="15 3 21 3 21 9"></polyline>
                                <line x1="10" y1="14" x2="21" y2="3"></line>
                            </svg>
                            Visit
                        </a>
                        <button class="action-btn remove-btn" onclick="removeSavedVoucher(@v.VoucherId, this)">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            </svg>
                            Remove
                        </button>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <svg width="100" height="100" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                    <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                </svg>
                <h3>No saved coupons yet</h3>
                <p>Start saving your favorite vouchers to access them quickly!</p>
                <a asp-page="/Vouchers/Index" class="btn-primary">Browse Coupons</a>
            </div>
        }
    </div>

    <div id="toast" class="toast"></div>

    <script>
        function copyCode(code, btn) {
            navigator.clipboard.writeText(code).then(() => {
                showToast(`✓ Code "${code}" copied to clipboard!`, 'success');

                const originalHTML = btn.innerHTML;
                btn.innerHTML = '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg> Copied!';
                btn.style.background = '#10b981';
                btn.style.color = 'white';

                setTimeout(() => {
                    btn.innerHTML = originalHTML;
                    btn.style.background = '';
                    btn.style.color = '';
                }, 2000);
            }).catch(() => {
                showToast('Failed to copy code', 'error');
            });
        }

        async function removeSavedVoucher(voucherId, btn) {
            if (!confirm('Are you sure you want to remove this voucher from saved?')) {
                return;
            }

            try {
                const response = await fetch('?handler=RemoveVoucher', {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(voucherId)
                });

                const result = await response.json();

                if (result.success) {
                    const voucherCard = btn.closest('.voucher-card');
                    voucherCard.style.opacity = '0';
                    voucherCard.style.transform = 'translateX(-100%)';

                    setTimeout(() => {
                        voucherCard.remove();

                        const container = document.getElementById('voucherContainer');
                        if (container.children.length === 0) {
                            location.reload();
                        }
                    }, 300);

                    showToast('✓ Voucher removed successfully', 'success');
                } else {
                    showToast(result.message || 'Failed to remove voucher', 'error');
                }
            } catch (error) {
                showToast('An error occurred. Please try again.', 'error');
            }
        }

        function showToast(message, type = 'info') {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = `toast ${type} show`;

            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
    </script>
</body>
</html>